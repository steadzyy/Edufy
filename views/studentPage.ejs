    <section id="courses" class="courses section">

      <div class="container">

        <div class="row">
          <% data.forEach(el => { %>
            <% el.Courses.forEach(ellagi => { %>
              <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100" style="margin-top: 20px;">
                <div class="course-item">
                  <img src="assets/img/course-1.jpg" class="img-fluid" alt="...">
                  <div class="course-content">
                    <% if (el.name === 'Beginner') { %>
                      <div class="d-flex justify-content-between align-items-center mb-3">
                        <p class="category" style="background-color: grey;"><%= el.name %></p>
                        <p class="duration"><%= toHoursAndMinutes(ellagi.duration) %></p>
                      </div>
                    <% } %>
                    <% if (el.name === 'Intermediate') { %>
                      <div class="d-flex justify-content-between align-items-center mb-3">
                        <p class="category" style="background-color: goldenrod;"><%= el.name %></p>
                        <p class="duration"><%= toHoursAndMinutes(ellagi.duration) %></p>
                      </div>
                    <% } %>
                    <% if (el.name === 'Advanced') { %>
                      <div class="d-flex justify-content-between align-items-center mb-3">
                        <p class="category" style="background-color: darkred;"><%= el.name %></p>
                        <p class="duration"><%= toHoursAndMinutes(ellagi.duration) %></p>
                      </div>
                    <% } %>
    
                    <h3><a href="course-details.html"><%= ellagi.name %></a></h3>
                    <p class="description"><%= ellagi.description %></p>
                    <a href="/student/<%= el.Courses.id %>" type="button" class="btn btn-outline-secondary d-flex " style="-ms-flex-align: center;">Start Study</a>
                  </div>
                </div>
              </div> <!-- End Course Item-->
            <% }) %>
          <% }) %>
        </div>

      </div>

    </section>

    <!-- Starter Section Section -->
    <section id="starter-section" class="starter-section section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Starter Section</h2>
        <p>Your Description Here<br></p>
      </div><!-- End Section Title -->

      <div class="container" data-aos="fade-up">
        <p>Use this page as a starter for your own custom pages.</p>
      </div>

    </section><!-- /Starter Section Section -->

